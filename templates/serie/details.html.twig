{% extends 'base.html.twig' %}

{% block extraStyles %}
    <style>body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7)), url("{{ asset('img/backdrops/'~serie.backdrop) }}");
    }
    </style>{% endblock %}


{% block title %}
    {{ serie.name }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="serie-details">
        <div><img src="{{ asset('img/posters/series/'~serie.poster) }}" alt="{{ serie.name }}"></div>
        <div class="serie-details-infos">
            <h2>{{ serie.name }}</h2>
            <div>Categorize in : {{ serie.genres }}</div>
            <div>Series Status : {{ serie.status }}</div>
            <div>{{ serie.overview|nl2br }}</div>
        </div>
    </div>


{% endblock %}

